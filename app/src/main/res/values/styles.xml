<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="edt_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_edt_login</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="btn_login_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="edt_register_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">22dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/bg_edt_normal</item>
        <!--        <item name="android:backgroundTint">#d21818</item>-->
    </style>

    <style name="edt_reg_ret_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/bg_edt_normal</item>
<!--                <item name="android:backgroundTint">#d21818</item>-->
    </style>

    <style name="txt_reg_ret_error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ee1818</item>
        <item name="android:textSize">13dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="txt_reg_ret_alter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="btn_reg_ret">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
<!--        <item name="android:layout_marginTop">50dp</item>-->
        <item name="android:background">@drawable/btn_true</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">#eeffffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="title_reg_ret">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textColor">#ea5455</item>
        <item name="android:textSize">33dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
